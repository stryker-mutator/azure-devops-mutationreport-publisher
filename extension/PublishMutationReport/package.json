{
  "name": "mutation-report-publisher",
  "author": "Rouke Broersma",
  "scripts": {
    "bump:task": "azp-bump ./task.json",
    "bump:task:minor": "azp-bump ./task.json -t minor",
    "bump:task:major": "azp-bump ./task.json -t major",
    "compile": "webpack --mode production",
    "compile:dev": "webpack --mode development",
    "start:dev": "webpack-dev-server --mode development",
    "clean": "rimraf ./dist",
    "clean:all": "rimraf ./dist && rimraf ./node_modules"
  },
  "dependencies": {
    "azure-pipelines-task-lib": "5.2.1"
  },
  "devDependencies": {
    "@types/node": "20.19.9",
    "azp-bump": "2.0.15",
    "copy-webpack-plugin": "12.0.2",
    "ts-loader": "9.5.2",
    "typescript": "5.8.3",
    "webpack": "5.100.2",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2"
  }
}
